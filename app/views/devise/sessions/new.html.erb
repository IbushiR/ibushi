<div class="container">
    <center>
      <h1>ログイン</h1>
      <br>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false, remote: false }) do |f| %>
        <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, size: 40, autofocus: true, autocomplete: "email" %>
        </div>
        <br>
        <div class="field">
        <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, size: 40, autocomplete: "current-password" %>
        </div>
        <br>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン状態を維持する" %>
          </div>
        <% end %>
        <br>
        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </center>
</div>
