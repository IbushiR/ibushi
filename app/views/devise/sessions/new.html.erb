<div class="container" style="width: 500px; border: 2px solid #dcdcdc; border-radius: 10px; padding: 20px 80px; margin-top: 60px">
      <div style="text-align: center;"><h1>ログイン</h1></div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false, remote: false }) do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス", class: 'form-label' %>
          <%= f.email_field :email, size: 40, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>
        <div class="field mt-4">
          <%= f.label :password, "パスワード", class: 'form-label' %>
          <%= f.password_field :password, size: 40, autocomplete: "current-password", class: 'form-control' %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン状態を維持する" %>
          </div>
        <% end %>
        <div class="actions mt-4" style="text-align: center;">
          <%= f.submit "ログイン", class: 'btn btn-primary' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
</div>
