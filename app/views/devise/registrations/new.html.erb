<div class="container">
  <center>
    <h2>新規登録</h2>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :name, "名前" %><br />
        <%= f.text_field :name, size: 40, autofocus: true, autocomplete: "name" %>
      </div>
      <br>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, size: 40, autofocus: true, autocomplete: "email" %>
      </div>
      <br>
      <div class="field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, size: 40, autocomplete: "new-password" %>
      </div>
      <br>
      <div class="field">
        <%= f.label :password_confirmation, "パスワード確認" %><br />
        <%= f.password_field :password_confirmation, size: 40, autocomplete: "new-password" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "登録" %>
      </div>
      <br>
    <% end %>
    <%= render "devise/shared/links" %>
  </center>
</div>
