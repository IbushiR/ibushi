<%= render "navber" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2 px-0" style="height: 100vh">
      <div class="sidebar_fixed ex1">
        <h1><%= @user.name %></h1>
        <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= link_to profiles_path do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6" style="width: 20px; height: 20px;">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
          </svg>
          <span>プロフィール</span>
        <% end %></li>
        <li class="list-group-item"><%= link_to "ツイート", new_tweet_path %></li>
        <li class="list-group-item"><%= button_to "ログアウト", destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
    </div>
    <div class="col-sm-10 px-0">
      <% @tweets.each do |tweets| %>
        <div class="card text-center">
          <div class="card-header">
            <%= tweets.user.name %>
          </div>
          <div class="card-body">
            <%= link_to "#{tweets.content}", tweet_path(tweets.id) %>
          </div>
          <div class="card-footer text-muted">
            <%= l tweets.created_at, format: :long %>
          </div>
        </div>
      <% end %>
      <%= paginate @tweets %>
    </div>
  </div>
</div>
