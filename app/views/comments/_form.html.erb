<center>
<h1><%= @tweet.content %>　に返信</h1>
<%= form_with model: [@tweet, @comment] do |form| %>
  <% if @comment.errors.any? %>
    <div style="color: red">
      <h2><% pluralize(@comment.errors.count, "error") %>間違いあるよ</h2>

        <ul>
          <% @comment.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :content, "返信", style: "display: block" %>
    <%= form.text_area :content, size: "50x5" %>
  </div>

  <div>
    <%= form.submit "投稿" %>
  <div>

<% end %>
</center>
  